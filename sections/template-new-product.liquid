{{ 'plyr.min.css' | asset_url | stylesheet_tag }}
{{ 'shopify-model-viewer-ui.min.css' | asset_url | stylesheet_tag }}

<div
  itemscope
  itemtype="http://schema.org/Product"
  data-wetheme-section-type="template--product"
  data-wetheme-section-id="{{ section.id }}"
>
  <meta itemprop="url" content="{{ shop.url }}{{ product.url }}">
  <meta itemprop="image" content="{{ product.featured_media.preview_image | img_url: 'grande' }}">
  <meta itemprop="brand" content="{{ product.vendor }}">
  <meta itemprop="sku" content="{{ product.selected_or_first_available_variant.sku }}">

  {% assign pick_an_option = false %}

  {% if pick_an_option %}
    {%- assign current_variant = product.selected_variant -%}
  {% else %}
    {%- assign current_variant = product.selected_or_first_available_variant -%}
  {% endif %}

  {% assign on_sale = false %}
  {% if current_variant.compare_at_price > current_variant.price %}
    {% assign on_sale = true %}
  {% endif %}

  {%- assign product_description_width = '' -%}
  {%- assign product_image_width = '' -%}

  {% assign media_block = section.blocks | where: 'type', 'media' | first %}
  {% assign options_block = section.blocks | where: 'type', 'options' | first %}
  {% assign price_block = section.blocks | where: 'type', 'price' | first %}
  {% assign pickup_block = section.blocks | where: 'type', 'local_pickup' | first %}
  {% assign trust_block = section.blocks | where: 'type', 'trust_badges' | first %}
  {% assign giftwrap_block = section.blocks | where: 'type', 'giftwrap' | first %}
  {% assign buttons_block = section.blocks | where: 'type', 'buy_buttons' | first %}

  {% case media_block.settings.image_size %}
    {% when 'small' %}
      {%- assign product_description_width = 'large--seven-twelfths' -%}
      {%- assign product_image_width = 'large--five-twelfths' -%}
    {% when 'medium' %}
      {%- assign product_description_width = 'large--six-twelfths' -%}
      {%- assign product_image_width = 'large--six-twelfths' -%}
    {% when 'large' %}
      {%- assign product_description_width = 'large--five-twelfths' -%}
      {%- assign product_image_width = 'large--seven-twelfths' -%}
  {% endcase %}

  <div class="product-media-templates">
    {% assign featured_media = current_variant.featured_media | default: product.featured_media %}
    {% render 'product-media-templates',
      product: product,
      section_id: section.id,
      featured_media_id: featured_media.id,
      enable_image_zoom: media_block.settings.enable_image_zoom,
      enable_video_loop: media_block.settings.enable_video_loop
    %}
  </div>

  {% assign style = 'full_width' %}
  {% if media_block.settings['image-display'] == 'thumbnails' %}
    {% assign style = media_block.settings.thumbnail_position %}
  {% endif %}
  {% if product.media.size < 2 %}
    {% comment %} No thumbnails {% endcomment %}
    {% assign style = 'full_width' %}
  {% endif %}

  {% assign wrap_product_variant_id = 0 %}
  {% assign wrap_product = false %}
  {% if settings.giftwrap_product_selector != blank %}
    {% assign wrap_product = all_products[settings.giftwrap_product_selector] %}
    {% if wrap_product.variants.first.id %}
      {% assign wrap_product_variant_id = wrap_product.variants.first.id %}
    {% endif %}
  {% endif %}

  {% assign locations_enabled = false %}
  {% if pickup_block %}
    {% assign locations_enabled = true %}
  {% endif %}

  {% assign thumbnail_changes_variant = false %}
  {% if options_block.settings.thumbnail_changes_variant %}
    {% assign thumbnail_changes_variant = true %}
  {% endif %}

  <div class="wrapper-padded product-form-vue main-page-container">
    <wetheme-product-form
      inline-template
      v-bind:initial-variant-id="{{ current_variant.id }}"
      v-bind:product="product"
      v-bind:product-section="productSection"
      v-bind:theme="theme"
      v-bind:slides-per-view="slidesPerView"
      v-bind:is-featured-product="isFeaturedProduct"
      v-bind:section-id="'{{ section.id }}'"
      v-bind:thumbnail-changes-variant="{{ thumbnail_changes_variant }}"
      v-bind:has-thumbnails="{% if style != 'full_width' %}true{% else %}false{% endif %}"
      v-bind:image-zoom-enabled="{{ media_block.settings.enable_image_zoom }}"
      v-bind:video-loop-enabled="{{ media_block.settings.enable_video_loop }}"
      v-bind:cart-method="'{{ settings.ajax_cart_method }}'"
      v-bind:giftwrap-product-variant-id="{{ wrap_product_variant_id }}"
      v-bind:locations-enabled="{{ locations_enabled }}"
      language-url="{{ localization.language.root_url }}"
    >
      <div class="product-single-wrapper">
        <div
          class="grid product-single product-sticky-wrapper{% if options_block.settings.product_variant_style == 'dropdowns' %} variant-dropdown-enabled{% else %} variant-swatches-enabled{% endif %}"
          data-section-id="{{ section.id }}"
        >
          <div class="grid__item {{ product_image_width }} context mobile--no-top-margin">
            {% render 'product-media',
              product: product,
              style: style,
              enable_image_zoom: media_block.settings.enable_image_zoom,
              hide_soldout_variants: options_block.settings.hide_soldout_variants,
              block_attributes: media_block.shopify_attributes
            %}
          </div>

          <div class="grid__item {{ product_description_width }}{% if section.settings.enable_sticky %} product-sticky{% endif %}">
            <div>
              <div class="product-details-wrapper">
                <div
                  itemprop="offers"
                  itemscope
                  itemtype="http://schema.org/Offer"
                  class="product-details--form-wrapper{% if product.available %} product-details--form-wrapper---in-stock{% else %} product-details--form-wrapper---out-of-stock{% endif %}"
                >
                  <meta itemprop="priceCurrency" content="{{ shop.currency }}">
                  <meta itemprop="url" content="{{ shop.url }}{{ product.url }}">
                  <link
                    itemprop="availability"
                    href="http://schema.org/{% if product.available %}InStock{% else %}OutOfStock{% endif %}"
                  >

                  <div class="form-vertical">
                    {% form 'product', product, id: 'AddToCartForm' %}
                      {%- for block in section.blocks -%}
                        {%- case block.type -%}
                          {%- when '@app' -%}
                            <div id="shopify-block-{{block.id}}" {{ block.shopify_attributes }}></div>
                          {% when 'complementary-products' %}
                            {%- if recommendations.performed and recommendations.products_count > 0 -%}
                              <div id="complementary-products-{{ block.id }}" {{ block.shopify_attributes }}></div>
                            {%- endif -%}
                          {%- when 'cross-sells' -%}
                            {%- if block.settings.cross_sell_product_1 != blank
                              or block.settings.cross_sell_product_2 != blank
                              or block.settings.cross_sell_product_3 != blank
                            -%}
                              <div id="cross-sell-{{ block.id }}" {{ block.shopify_attributes }}></div>
                            {%- endif -%}
                          {%- when 'sale_badge' -%}
                            {% if on_sale %}
                              <div
                                {{ block.shopify_attributes }}
                                class="product-page--sale-badge{% unless current_variant.compare_at_price > current_variant.price %} js{% endunless %}"
                                v-if="isSale"
                              >
                                {{ 'products.product.on_sale' | t }}
                              </div>
                            {% endif %}
                          {%- when 'vendor_sku' -%}
                            {%- if current_variant.sku != blank or product.vendor != '' -%}
                              <div class="product__meta--sku-vendor" {{ block.shopify_attributes }}>
                                {% if current_variant.sku != blank %}
                                  <div
                                    class="product__meta--sku {% if current_variant.sku == "" %}js{% endif %}"
                                    v-if="variant && variant.sku !== ''"
                                  >
                                    <h4>
                                      {{ 'customer.order.sku' | t }}:
                                      <span class="js__currentVariantSKU" v-text="variant.sku">
                                        {{- current_variant.sku -}}
                                      </span>
                                    </h4>
                                  </div>
                                {% endif %}
                                {% if product.vendor != '' %}
                                  <div class="product__meta--vendor">
                                    <h4>{{ product.vendor | link_to_vendor }}</h4>
                                  </div>
                                {% endif %}
                              </div>
                            {%- endif -%}

                          {%- when 'title' -%}
                            <h1
                              itemprop="name"
                              {{ block.shopify_attributes }}
                              class="tw-text-gray-900 tw-font-sans tw-font-black tw-text-4xl"
                              {{ block.shopify_attributes }}
                            >
                              {{ product.title | escape }}
                            </h1>

                          {%- when 'price' -%}
                            <div {{ block.shopify_attributes }}>
                              <span class="visually-hidden">{{ 'products.general.sale_price' | t }}</span>
                              <p
                                id="ComparePrice"
                                class="compare-at-price {% if settings.show_discount == 'hide' %}sale-price{% endif %}{% unless on_sale %} js{% endunless %}"
                                v-if="isSale"
                                v-money="variant.compare_at_price"
                              >
                                <span class="money">{{ current_variant.compare_at_price | money }}</span>
                              </p>

                              {% if on_sale %}
                                {% case settings.show_discount %}
                                  {%- when 'percentage' -%}
                                    <li class="product-page--pricing--discount">
                                      <span
                                        class="variant-percentage-wrapper{% unless on_sale %} js{% endunless %}"
                                        v-if="isSale"
                                      >
                                        -<span
                                          class="variant-percentage"
                                          v-text="((variant.compare_at_price - variant.price) / variant.compare_at_price * 100).toFixed(0) + '%'"
                                        >
                                          {{
                                            current_variant.compare_at_price
                                            | minus: current_variant.price
                                            | times: 100.0
                                            | divided_by: current_variant.compare_at_price
                                            | money_without_currency
                                            | times: 100
                                            | remove: '.0'
                                          -}}
                                          %
                                        </span>
                                      </span>
                                    </li>
                                  {%- when 'value' -%}
                                    <li class="product-page--pricing--discount">
                                      <span
                                        class="variant-value-wrapper{% unless on_sale %} js{% endunless %}"
                                        v-if="isSale"
                                      >
                                        -<span class="variant-value" v-money="variant.compare_at_price - variant.price">
                                          <span class="money">
                                            {{
                                              current_variant.compare_at_price
                                              | minus: current_variant.price
                                              | money
                                            }}
                                          </span>
                                        </span>
                                      </span>
                                    </li>
                                {% endcase %}
                              {% endif %}

                              {% render 'product-pricing', current_variant: current_variant %}
                              {% render 'unit-price-measurement-variant', variant: current_variant %}

                              {%- if cart.taxes_included or shop.shipping_policy.body != blank -%}
                                <div class="product-page__policies rte">
                                  {%- if cart.taxes_included and price_block.settings.tax_included -%}
                                    {{ 'products.product.include_taxes' | t }}
                                  {%- endif -%}
                                  {%- if shop.shipping_policy.body != blank and price_block.settings.shipping_policy -%}
                                    {{ 'products.product.shipping_policy_html' | t: link: shop.shipping_policy.url }}
                                  {%- endif -%}
                                </div>
                              {%- endif -%}

                              <div class="shopify-payment-terms__container">
                                {{ form | payment_terms }}
                              </div>
                            </div>

                          {%- when 'options' -%}
                            {% render 'product-options',
                              product: product,
                              variant_style: options_block.settings.product_variant_style,
                              section_id: section.id,
                              current_variant: current_variant,
                              hide_soldout_variants: options_block.settings.hide_soldout_variants,
                              block_attributes: options_block.shopify_attributes
                            %}

                          {% when 'linked-products' %}
                            {%- if block.settings.linked_products != blank -%}
                              {% assign linked_products_ids = block.settings.linked_products | map: 'id' %}
                              {% unless linked_products_ids.size == 1 and linked_products_ids contains product.id %}
                                {% assign option_index = 0 %}
                                {% assign swatches_aspect_ratio = block.settings.swatches_aspect_ratio %}
                                <div class="linked-products" {{ block.shopify_attributes }}>
                                  <div class="swatch" data-option-index="{{ option_index }}">
                                    {% if block.settings.option_name != blank %}
                                      <div class="header">{{ block.settings.option_name }}</div>
                                    {% endif %}

                                    <div class="swatch-items-wrapper">
                                      {% liquid
                                        for linked_product in block.settings.linked_products
                                          assign escaped_linked_product_variant = linked_product.title | split: ' - ' | last | escape
                                          if linked_product.available
                                            if linked_product.id == product.id
                                              assign checked = true
                                              assign redirect = blank
                                            else
                                              assign checked = false
                                              assign redirect = linked_product.url
                                            endif
                                            if linked_product.media and linked_product.media.size > 0
                                              assign image_url = linked_product.media[0].preview_image | image_url: width: 250
                                              assign img_aspect_ratio = linked_product.media[0].preview_image.aspect_ratio
                                            elsif linked_product.featured_image != blank
                                              assign image_url = linked_product.featured_image | image_url: width: 250
                                              assign img_aspect_ratio = linked_product.featured_image.aspect_ratio
                                            else
                                              assign image_url = blank
                                              assign img_aspect_ratio = blank
                                            endif
                                            render 'image-swatch', image_url: image_url, value: escaped_linked_product_variant, checked: checked, available: linked_product.available, size: block.settings.swatches_size, aspect_ratio: swatches_aspect_ratio, img_aspect_ratio: img_aspect_ratio, variation_redirect: redirect, section: section, option_index: option_index
                                          endif
                                        endfor
                                      %}
                                    </div>
                                  </div>
                                </div>
                              {% endunless %}
                            {%- endif -%}

                          {%- when 'product-description' -%}
                            {%- if product.description != blank -%}
                              <div
                                class="product-description{% if block.settings.collapsible_tab %} product-description--collapsible{% endif %}"
                                {{ block.shopify_attributes }}
                              >
                                {% unless block.settings.collapsible_tab %}
                                  <span>{{ product.description }}</span>
                                {% else %}
                                  {% if block.settings.custom_icon %}
                                    {% assign icon = block.settings.custom_icon %}
                                  {% else %}
                                    {% assign icon = block.settings.icon %}
                                  {% endif %}

                                  {% render 'collapsible-tab',
                                    icon: icon,
                                    heading: block.settings.heading,
                                    content: product.description,
                                    open_close_icon: block.settings.open_close_icon,
                                    open_by_default: false
                                  %}
                                {% endunless %}
                              </div>
                            {%- endif -%}

                          {%- when 'collapsible-tab' -%}
                            {% if block.settings.custom_icon %}
                              {% assign icon = block.settings.custom_icon %}
                            {% else %}
                              {% assign icon = block.settings.icon %}
                            {% endif %}
                            {% if block.settings.page.content %}
                              {% assign content = block.settings.page.content %}
                            {% else %}
                              {% assign content = block.settings.text %}
                            {% endif %}

                            {%- if icon != 'none' or block.settings.heading != blank or content != blank -%}
                              <div class="collapsible-tab-container" {{ block.shopify_attributes }}>
                                {% render 'collapsible-tab',
                                  icon: icon,
                                  heading: block.settings.heading,
                                  content: content,
                                  open_close_icon: block.settings.open_close_icon,
                                  open_by_default: false
                                %}
                              </div>
                            {%- endif -%}

                          {%- when 'giftwrap' -%}
                            {%- if settings.giftwrap_product_selector > '' and product.available and wrap_product -%}
                              {% if wrap_product.available %}
                                <div class="product__meta--giftwrap" {{ block.shopify_attributes }}>
                                  <input type="checkbox" id="checkbox" v-model="giftwrapProduct" class="focus-visible">
                                  <label for="checkbox">{{ settings.giftwrap_label_text }}</label>
                                </div>
                              {% endif %}
                            {%- endif -%}

                          {%- when 'quantity' -%}
                            <div
                              class="{% if options_block.settings.product_variant_style == 'dropdowns' %}selector-wrapper{% else %}swatches-wrapper{% endif %} {% if section.settings.image_size == 'large' %}col-md-12{% else %}col-md-6{% endif %} col-sm-12 col-xs-12"
                              {{ block.shopify_attributes }}
                            >
                              <label for="Quantity" class="quantity-selector product-sub-label">
                                {{- 'products.product.quantity' | t -}}
                              </label>

                              <div class="js-qty">
                                <button
                                  type="button"
                                  aria-label="-"
                                  class="js-qty__adjust js-qty__adjust--minus icon-fallback-text"
                                  v-on:click="decreaseQuantity"
                                >
                                  {% render 'theme-icon' with icon: 'minus', iconClasses: 'flex-full', iconAttributes: 'aria-hidden="true"' %}
                                  <span class="fallback-text">âˆ’</span>
                                </button>
                                <input
                                  v-model="quantity"
                                  type="text"
                                  class="js-qty__num"
                                  value="1"
                                  min="1"
                                  aria-label="quantity"
                                  pattern="[0-9]*"
                                  name="quantity-js"
                                  id="Quantity"
                                >
                                <button
                                  type="button"
                                  aria-label="+"
                                  class="js-qty__adjust js-qty__adjust--plus icon-fallback-text"
                                  v-on:click="increaseQuantity"
                                >
                                  {% render 'theme-icon' with icon: 'plus', iconClasses: 'flex-full', iconAttributes: 'aria-hidden="true"' %}
                                  <span class="fallback-text">+</span>
                                </button>
                              </div>

                              <noscript>
                                <input
                                  class="quantity-noscript"
                                  type="number"
                                  name="quantity"
                                  id="Quantity-{{ section.id }}"
                                  aria-label="quantity"
                                  min="1"
                                  value="1"
                                >
                              </noscript>
                            </div>

                          {%- when 'buy_buttons' -%}
                            {%- if product.gift_card?
                              and block.settings.enable_gift_card_recipient_form
                              and product.available
                            -%}
                              {% render 'gift-card-recipient-form' %}
                            {%- endif -%}
                            <div class="paymentButtonsWrapper" {{ block.shopify_attributes }}>
                              <button
                                type="submit"
                                data-cart-url="{{ routes.cart_url }}"
                                aria-label="{{ 'products.product.add_to_cart' | t }}"
                                name="add"
                                id="AddToCart"
                                class="btn{% if buttons_block.settings.show_smart_checkout and product.selling_plan_groups.size == 0 %} add-to-cart--secondary{% endif %}"
                                v-bind:class="{ disabled: addToCartDisabled }"
                                v-bind:disabled="addToCartDisabled"
                              >
                                {% assign icon_attrs = 'v-if="state === ' | append: "'adding'" | append: '" v-cloak' %}
                                {% render 'theme-icon' with icon: 'circle-notch', iconClasses: 'spin js fa-2x flex-full', iconAttributes: icon_attrs, icon_fill: settings.color_primary_button_text -%}
                                <span class="sr-only">{{ 'collections.paginate.loading' | t }}</span>
                                <span
                                  class="{% if current_variant.available %}js{% endif %}"
                                  v-if="state === 'ready'"
                                  {% unless current_variant.available %}
                                    v-cloak
                                  {% endunless %}
                                >
                                  {{- 'products.product.add_to_cart' | t -}}
                                </span>
                                <span class="js" v-if="state === 'added'" v-cloak>
                                  {{- 'products.product.added' | t -}}
                                </span>
                                <span
                                  class="{% unless current_variant.available %}js{% endunless %}"
                                  v-if="state === 'soldOut'"
                                  v-cloak
                                >
                                  {{- 'products.product.sold_out' | t -}}
                                </span>
                                <span class="js" v-if="state === 'unavailable'" v-cloak>
                                  {{- 'products.product.unavailable' | t -}}
                                </span>
                              </button>

                              <noscript>
                                <button type="submit" class="btn" aria-label="{{ 'products.product.add_to_cart' | t }}">
                                  <span>{{ 'products.product.add_to_cart' | t }}</span>
                                </button>
                              </noscript>

                              {% if buttons_block.settings.show_smart_checkout %}
                                {{ form | payment_button }}
                              {% endif %}
                            </div>

                          {%- when 'local_pickup' -%}
                            <div
                              class="product-page--local-pickup"
                              v-if="hasLocalPickup"
                              v-html="hasLocalPickup"
                              {{ block.shopify_attributes }}
                            ></div>
                            <div id="initialPickupInfo">
                              {% render 'store-availability-placeholder' with product_variant: current_variant %}
                            </div>

                          {%- when 'trust_badges' -%}
                            {%- if trust_block.settings['trust-badge'] -%}
                              <span class="trust-badge-container" {{ block.shopify_attributes }}>
                                {% capture styles %}width: {{ trust_block.settings.trust-badge_max_width | escape }}px;{% endcapture %}
                                {% render 'responsive-image' with trust_block.settings['trust-badge'],
                                  class: 'trust-badge',
                                  alt: '',
                                  blur: false,
                                  styles: styles
                                %}
                              </span>
                            {%- endif -%}

                          {%- when 'product_meta' -%}
                            {%- if product.tags.size > 0 or product.collections.size > 0 or product.type != '' -%}
                              <div class="product__meta" {{ block.shopify_attributes }}>
                                {% if product.tags.size > 0 %}
                                  <div class="product__meta--tags">
                                    <span
                                      ><strong>{{ 'products.product.tags' | t }}:</strong>
                                    </span>
                                    {% for tag in product.tags %}
                                      <a href="{{ routes.all_products_collection_url }}/{{ tag | handleize }}"
                                        ><span>{{ tag }}</span></a
                                      >
                                      {%- if forloop.last == false %}, {% endif %}
                                    {% endfor %}
                                  </div>
                                {% endif %}

                                {% if product.collections.size > 0 %}
                                  <div class="product__meta--tags">
                                    <span
                                      ><strong>{{ 'products.product.category' | t }}:</strong>
                                    </span>
                                    {% for collection in product.collections %}
                                      <a href="{{ collection.url }}"
                                        ><span>{{ collection.title }}</span></a
                                      >
                                      {%- if forloop.last == false %}, {% endif %}
                                    {% endfor %}
                                  </div>
                                {% endif %}

                                {% if product.type != '' %}
                                  <div class="product__meta--type">
                                    <span
                                      ><strong>{{ 'products.product.type' | t }}: </strong></span
                                    >
                                    <span>{{ product.type }}</span>
                                  </div>
                                {% endif %}
                              </div>
                            {%- endif -%}

                          {%- when 'social_sharing' -%}
                            {%- if settings.share_facebook or settings.share_twitter or settings.share_pinterest %}
                              <div {{ block.shopify_attributes }}>
                                {% render 'social-share' %}
                              </div>
                            {%- endif -%}

                          {% when 'custom_liquid' %}
                            {%- if block.settings.custom_liquid != blank -%}
                              <div {{ block.shopify_attributes }}>{{ block.settings.custom_liquid }}</div>
                            {%- endif -%}

                          {% when 'product-rating' %}
                            {% if block.settings.rating != blank %}
                              {% if block.settings['rating-label'] != blank %}
                                <p class="rating-label">{{ block.settings['rating-label'] }}</p>
                                {% assign rating_aria_label = block.settings['rating-label'] %}
                              {% else %}
                                {% assign rating_aria_label = 'Rating' %}
                              {% endif %}

                              {% if block.settings['rating-icon-full'] %}
                                {% liquid
                                  assign rating_decimal = 0
                                  assign decimal = block.settings.rating | modulo: 1
                                  if decimal >= 0.3 and decimal <= 0.7
                                    assign rating_decimal = 0.5
                                  elsif decimal > 0.7
                                    assign rating_decimal = 1
                                  endif

                                  assign full_icons = block.settings.rating | floor | plus: rating_decimal | floor
                                  assign empty_icons = block.settings['rating-max'] | round | minus: full_icons
                                  if rating_decimal == 0.5
                                    assign empty_icons = empty_icons | minus: 1
                                  endif

                                  assign full_alt = block.settings['rating-icon-full'].alt | default: 'Full icon'
                                  assign empty_alt = block.setting['rating-icon-empty'].alt | default: 'Empty icon'
                                %}

                                <div
                                  class="rating-icons"
                                  role="img"
                                  aria-label="{{ rating_aria_label }} - {{ block.settings.rating }} out of {{ block.settings.rating-max }}"
                                  {{ block.shopify_attributes }}
                                >
                                  {% for i in (1..full_icons) %}
                                    <div class="rating-icons__icon" aria-hidden="true">
                                      {% render 'responsive-image' with block.settings['rating-icon-full'],
                                        alt: full_alt
                                      %}
                                    </div>
                                  {% endfor %}

                                  {% if block.settings['rating-icon-empty'] %}
